<% provide(:title, "Edit user") %>
<h1>Cap nhat thong tin ca nhan</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name , 'Ten cua ban'%>
      <%= f.text_field :name %>

      <%= f.label :email , 'Email cua ban'%>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Nhap lai mat khau" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Cap nhat thong tin", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Cap nhat Gravatar</a>
  </div>
</div>
